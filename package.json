{
  "name": "@root/satori",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "docs",
    "external/*",
    "adapters/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yakumo esbuild && yakumo tsc",
    "bump": "yakumo version",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "lint": "eslint packages adapters --ext=ts --cache",
    "test": "yakumo mocha -r esbuild-register",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "license": "MIT",
  "devDependencies": {
    "@koishijs/eslint-config": "^1.0.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.15.3",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "esbuild": "^0.17.12",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.36.0",
    "eslint-plugin-mocha": "^10.1.0",
    "mocha": "^9.2.2",
    "shx": "^0.3.4",
    "typescript": "^4.9.5",
    "yakumo": "^0.3.10",
    "yakumo-esbuild": "^0.3.22",
    "yakumo-mocha": "^0.3.1",
    "yakumo-publish": "^0.3.4",
    "yakumo-publish-sync": "^0.3.2",
    "yakumo-tsc": "^0.3.8",
    "yakumo-upgrade": "^0.3.3",
    "yakumo-version": "^0.3.4"
  }
}
